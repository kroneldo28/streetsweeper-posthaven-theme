    function initWithRetry() {
      init();

      if (window.location.pathname.includes('archive')) {
        var attempts = 0;
        var maxAttempts = 20;
        var checkInterval = setInterval(function() {
          attempts++;
          var monthElements = document.querySelectorAll('[data-month-date]');
          var dateElements = document.querySelectorAll('[data-archive-date]');

          if (monthElements.length > 0 || dateElements.length > 0) {
            init();
            initLoadMoreButton();
            clearInterval(checkInterval);
          } else if (attempts >= maxAttempts) {
            clearInterval(checkInterval);
          }
        }, 200);
      }
    }

    function initLoadMoreButton() {
      var archiveMonths = document.querySelector('.archive-months');
      var loadMoreLink = document.querySelector('.load-more-months');

      if (!archiveMonths || !loadMoreLink) return;

      var monthItems = archiveMonths.querySelectorAll('li');
      var totalMonths = monthItems.length;
      var currentVisible = 12;
      var increment = 3;

      if (totalMonths <= 12) {
        loadMoreLink.classList.add('hidden');
        return;
      }

      loadMoreLink.addEventListener('click', function(e) {
        e.preventDefault();
        currentVisible += increment;

        archiveMonths.className = 'archive-months';
        if (currentVisible >= totalMonths) {
          archiveMonths.classList.add('show-all');
          loadMoreLink.classList.add('hidden');
        } else {
          archiveMonths.classList.add('show-' + currentVisible);
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initWithRetry);
    } else {
      initWithRetry();
    }
