    function detectLanguage() {
      // Check URL parameter first (highest priority)
      var urlParams = new URLSearchParams(window.location.search);
      var langParam = urlParams.get('lang');
      if (langParam && (langParam === 'en' || langParam === 'fr')) {
        localStorage.setItem('blogLang', langParam);
        return langParam;
      }

      // Check referrer for language (before localStorage to catch navigation from main site)
      var referrer = document.referrer;
      if (referrer && referrer.includes('ronelkouakep.com')) {
        if (referrer.includes('/en/') || referrer.includes('/en?') || referrer.endsWith('/en')) {
          localStorage.setItem('blogLang', 'en');
          return 'en';
        }
        if (referrer.includes('/fr/') || referrer.includes('/fr?') || referrer.endsWith('/fr')) {
          localStorage.setItem('blogLang', 'fr');
          return 'fr';
        }
      }

      // Check localStorage (for returning visitors)
      var storedLang = localStorage.getItem('blogLang');
      if (storedLang && (storedLang === 'en' || storedLang === 'fr')) {
        return storedLang;
      }

      // Check browser language as fallback
      var browserLang = navigator.language || navigator.userLanguage;
      if (browserLang && browserLang.startsWith('en')) {
        return 'en';
      }

      // Default to French
      return 'fr';
    }

    function formatDate(dateStr, lang) {
      var parts = dateStr.split('-');
      var year = parts[0];
      var month = parseInt(parts[1], 10) - 1;
      var day = parseInt(parts[2], 10);
      var monthName = months[lang][month];

      if (lang === 'fr') {
        return day + ' ' + monthName + ' ' + year;
      } else {
        return monthName + ' ' + day + ', ' + year;
      }
    }

    function applyTranslations(lang) {
      var t = translations[lang];
      var r = routes[lang];

      // Apply text translations
      document.querySelectorAll('[data-i18n]').forEach(function(el) {
        var key = el.getAttribute('data-i18n');
        if (t[key]) {
          el.textContent = t[key];
        }
      });

      // Apply href translations
      document.querySelectorAll('[data-i18n-href]').forEach(function(el) {
        var key = el.getAttribute('data-i18n-href');
        if (r[key]) {
          el.setAttribute('href', r[key]);
        }
      });

      // Apply date formatting
      document.querySelectorAll('[data-date]').forEach(function(el) {
        var dateStr = el.getAttribute('data-date');
        if (dateStr) {
          el.textContent = formatDate(dateStr, lang);
        }
      });

      // Apply plural translations (responses count)
      document.querySelectorAll('[data-i18n-plural]').forEach(function(el) {
        var key = el.getAttribute('data-i18n-plural');
        var count = parseInt(el.getAttribute('data-count'), 10);
        if (t[key] && !isNaN(count)) {
          var form = count === 1 ? t[key][0] : t[key][1];
          el.textContent = count + ' ' + form;
        }
      });

      // Apply upvote translations
      document.querySelectorAll('[data-i18n-upvote]').forEach(function(el) {
        var key = el.getAttribute('data-i18n-upvote');
        var count = parseInt(el.getAttribute('data-count'), 10);
        if (t[key] && !isNaN(count)) {
          var form = count === 1 ? t[key][0] : t[key][1];
          el.textContent = count + ' ' + form;
        }
      });

      // Apply archive month date formatting (e.g., "January 2025" -> "janvier 2025")
      document.querySelectorAll('[data-month-date]').forEach(function(el) {
        var dateStr = el.getAttribute('data-month-date');
        if (dateStr) {
          el.textContent = formatMonthDate(dateStr, lang);
        }
      });

      // Apply archive result date formatting
      document.querySelectorAll('[data-archive-date]').forEach(function(el) {
        var dateStr = el.getAttribute('data-archive-date');
        if (dateStr) {
          el.textContent = formatArchiveDate(dateStr, lang);
        }
      });
    }

    // Format month date like "January 2025" -> "janvier 2025" (FR)
    function formatMonthDate(dateStr, lang) {
      // Parse "Month Year" format
      var parts = dateStr.trim().split(' ');
      if (parts.length === 2) {
        var monthEn = parts[0];
        var year = parts[1];
        var monthIndex = months.en.indexOf(monthEn);
        if (monthIndex !== -1) {
          return months[lang][monthIndex] + ' ' + year;
        }
      }
      return dateStr;
    }

    // Format archive date like "January 1, 2025" -> "1 janvier 2025" (FR)
    function formatArchiveDate(dateStr, lang) {
      // Try to parse "Month Day, Year" format
      var match = dateStr.match(/^(\w+)\s+(\d+),?\s+(\d{4})$/);
      if (match) {
        var monthEn = match[1];
        var day = parseInt(match[2], 10);
        var year = match[3];
        var monthIndex = months.en.indexOf(monthEn);
        if (monthIndex !== -1) {
          if (lang === 'fr') {
            return day + ' ' + months[lang][monthIndex] + ' ' + year;
          } else {
            return months[lang][monthIndex] + ' ' + day + ', ' + year;
          }
        }
      }
      return dateStr;
    }

    // Apply translations on page load
    function init() {
      var currentLang = detectLanguage();
      applyTranslations(currentLang);
    }

    // Ensure DOM is ready before applying translations
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
