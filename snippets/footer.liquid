        var text = el.textContent.trim().toLowerCase();
        if (text === 'next') {
          el.textContent = t['archive.next'];
          el.classList.add('pagination-next');
        } else if (text === 'previous') {
          el.textContent = t['archive.prev'];
          el.classList.add('pagination-prev');
        }
      });
