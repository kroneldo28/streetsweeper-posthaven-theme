<section class="archive">
  <h2 data-i18n="archive.title">Archives</h2>

  <div class="archive-search">
    <h4 data-i18n="archive.searchTitle">Rechercher</h4>
    {% form 'archive' %}
  </div>

  <div class="archive-months">
    <h4 data-i18n="archive.browseByDate">Parcourir par date</h4>
    <ul class="months-grid">
      {% archive_months %}
        <li>
          <a href={{ month.url }} data-month-date="{{ month.date }}">{{ month.date }}</a>
          <span class="month-count">({{ month.count }})</span>
        </li>
      {% endarchive_months %}
    </ul>
    <a href="#" class="load-more-months" data-i18n="archive.loadMore">Charger plus →</a>
  </div>

  <div class="archive-results">
    <h4 data-i18n="archive.results">Résultats</h4>
    <ul>
      {% archive_results %}
        <li class="archive-entry">
          <a href="{{ result.url }}">
            <span>{{ result.title }}</span>
          </a>
          <div class="search-highlight">
            {{ result.snippet }}
          </div>
          <div class="archive-date" data-archive-date="{{ result.date }}">
            {{ result.date }}
          </div>
        </li>
      {% endarchive_results %}
    </ul>

    <div class="archive-pagination">
      {{ archive.pagination }}
    </div>
  </div>
</section>
