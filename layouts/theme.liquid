<!DOCTYPE html>
<html class='no-js'>
  <head>
    <title>{{ request.page_title }}</title>

    <meta content='width=device-width,initial-scale=1' name='viewport'>

    {{ meta_tags }}

    <link href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">

    <link href="{{ 'images/favicon.ico' | asset_url }}?v=2" rel='shortcut icon' type='image/x-icon'>
    <link href="{{ 'images/favicon-32x32.png' | asset_url }}?v=2" rel="icon" type="image/png" sizes="32x32">
    <link href="{{ 'images/favicon-16x16.png' | asset_url }}?v=2" rel="icon" type="image/png" sizes="16x16">
    <link href="{{ 'images/apple-touch-icon.png' | asset_url }}?v=2" rel="apple-touch-icon" sizes="180x180">
    <!--[if IE]>
      <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {{ 'blog.css' | asset_url | stylesheet_tag }}

    {{ posthaven.includes_for_head }}
  </head>

  <body class='site-{{ site.id }}'>
    {% include 'nav_menu' %}

    <header>
      {% include 'alerts' %}

      <h1 class="site-name">
        <a href="{{ site.url }}">{{ site.name | smarty_pants }}</a>
      </h1>

      {% unless site.description == empty %}
        <h4 class="site-description">{{ site.description | smarty_pants }}</h4>
      {% endunless %}

    </header>


    <main>
      {{ content_for_layout }}
    </main>

    {% include 'footer' %}

    {{ posthaven.includes_for_body }}
  </body>
</html>
